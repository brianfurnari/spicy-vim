# Global snippets

# (c) holds no legal value ;)
snippet c)
	`&enc[:2] == "utf" ? "©" : "(c)"` Copyright `strftime("%Y")` ${1:`g:snips_author`}. All Rights Reserved.${2}
snippet date
	`strftime("%Y-%m-%d")`
# MODELINES
#   make sure your language has ':setlocal commentstring' if this isn't
#   working
snippet modeline Normal
	`printf(&cms,join([' vim:','set',&ft != '' ? 'ft='.&ft:'','ff='.&ff,(&et? '' : 'no').'et','sw='.&sw,'ts='.&ts,':']))`
snippet modeline Indent Only
	`printf(&cms,join([' vim:','set',(&et ? '' : 'no').'et','sw='.&sw,'ts='.&ts,':']))`
snippet modeline Fold
	`printf(&cms,join([' vim600:','set','foldmethod='.&foldmethod,'foldmarker='.&foldmarker,'f oldlevel=1',':']))`
# Fancy folding markers (index based)
snippet fld
	`repeat('-',(&tw ? &tw - 7 : 73) - (strlen(substitute(getline('.'),"\t",repeat(" ",&ts),'g'))))``split(&foldmarker,',')[0]`${1:1}${2}
